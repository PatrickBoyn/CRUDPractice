<Application x:Class="CRUDPlay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CRUDPlay"
             xmlns:uc="clr-namespace:CRUDPlay.UserControls"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
            <!-- Implicit Styles -->
            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="10"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Content" Value="Save Number"/>
                <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="0 10 0 10"/>
            <Setter Property="IsEnabled" Value="False"/>
            </Style>
        <Style TargetType="ListView">
            <Setter Property="Height" Value="190"/>
        </Style>
        <!-- Explicit Styles -->
        <Style TargetType="uc:DisplayWeightsControl" x:Name="Test">
            <Setter Property="Background" Value="Bisque"/>
        </Style>
    </Application.Resources>
</Application>
